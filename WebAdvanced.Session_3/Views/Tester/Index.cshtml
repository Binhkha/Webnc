@model WebAdvanced.Session_3.Models.Tester

@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <title>Index</title>
</head>
<body>
    <h2>Tester Form</h2>
    <h3>@Html.Raw(ViewBag.ErrorMessage)</h3>

    @using (Html.BeginForm())
    {
        <form method="post" class="form-horizontal">

            <div class="form-group">
                <label class="control-label col-md-2">Username: </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.userName, htmlAttributes: new { @class = "form-control col-md-7" })
                </div>
                <br />
            </div>

            <br />
            <div class="form-group">
                <label class="control-label col-md-2">Password: </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.passWord, htmlAttributes: new { @class = "form-control col-md-7" })
                </div>
                <br />
            </div>

            <br />
            <div class="form-group">
                <label class="control-label col-md-2">Full Name: </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.fullName, htmlAttributes: new { @class = "form-control col-md-7" })
                </div>
                <br />
            </div>

            <br />
            <div class="form-group">
                <label class="control-label col-md-2">Email: </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.email, htmlAttributes: new { @class = "form-control col-md-7" })
                </div>
                <br />
            </div>

            <br />
            <div class="form-group">
                <label class="control-label col-md-2">Phone: </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.phone, htmlAttributes: new { @class = "form-control col-md-7" })
                </div>
                <br />
            </div>

            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Register" class="btn btn-default" />
                </div>
            </div>

        </form>
    }
</body>
</html>

